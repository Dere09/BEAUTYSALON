<%- include('partials/header', { title: 'Reset Password' , navActive: 'userslist' , hideMenu: true }) %>
  <%- include('partials/sidebar', { path: '/userslist' }) %>

    <div class="main-content">
      <style>
        .reset-container {
          max-width: 500px;
          margin: 40px auto;
          background-color: white;
          padding: 30px;
          border-radius: 12px;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
          text-align: center;
          color: #e91e63;
          margin-bottom: 20px;
        }

        form {
          display: flex;
          flex-direction: column;
        }

        label {
          margin-bottom: 8px;
          font-weight: bold;
        }

        input[type="password"] {
          padding: 12px;
          margin-bottom: 20px;
          border: 1px solid #ddd;
          border-radius: 8px;
          font-size: 14px;
        }

        button {
          padding: 12px;
          background-color: #e91e63;
          color: white;
          border: none;
          border-radius: 8px;
          font-size: 16px;
          font-weight: 600;
          cursor: pointer;
          transition: background 0.3s ease;
        }

        button:hover {
          background-color: #d81b60;
        }

        .back-link {
          margin-top: 20px;
          display: block;
          text-align: center;
          text-decoration: none;
          color: #cc3366;
        }

        .alert {
          padding: 12px;
          border-radius: 8px;
          margin-bottom: 20px;
          text-align: center;
        }

        .alert-danger {
          background-color: #fce4ec;
          color: #c62828;
          border: 1px solid #ffcdd2;
        }

        .alert-success {
          background-color: #e8f5e9;
          color: #2e7d32;
          border: 1px solid #c8e6c9;
        }
      </style>

      <div class="reset-container">
        <h2><i class="fas fa-key"></i> Reset Password</h2>
        <p style="text-align: center; margin-bottom: 20px; color: #666;">
          Updating password for: <strong>
            <%= user.username %>
          </strong>
        </p>

        <% if (error && error.length> 0) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
          <% } %>

            <% if (success && success.length> 0) { %>
              <div class="alert alert-success">
                <%= success %>
              </div>
              <% } %>

                <form action="/reset-password/<%= user.username %>" method="POST">
                  <label for="newPassword">New Password</label>
                  <input type="password" id="newPassword" name="newPassword" required />

                  <label for="confirmPassword">Confirm Password</label>
                  <input type="password" id="confirmPassword" name="confirmPassword" required />

                  <button type="submit"><i class="fas fa-save"></i> Save Password</button>
                </form>

                <a class="back-link" href="/userslist"><i class="fas fa-arrow-left"></i> Back to User List</a>
      </div>
    </div>

    <%- include('partials/footer') %>