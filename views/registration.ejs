<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Appointment - BeautyHub Ethiopia</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Open+Sans:wght@300;400;600&display=swap"
    rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Custom CSS -->
  <link href="/css/register.css" rel="stylesheet">

  <!-- Select2 CSS (Optional if you still use it, but our custom select is better styled) -->
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>

<body>

  <!-- Header -->
  <header>
    <div class="logo">
      <img src="/images/logo.png" alt="BeautyHub Africa Logo">
      <span>BeautyHub Ethiopia</span>
    </div>
    <nav>
      <a href="/">Home</a>
      <a href="/gallery">Gallery</a>
      <a href="/contact">Contact</a>
      <a href="/registration" class="active">Book Now</a>
    </nav>
    <div class="search-profile">
      <!-- Simple search icon for now in internal pages -->
      <i class="fas fa-search" style="color: #666; cursor: pointer;"></i>
      <div class="user-menu" style="position: relative;">
        <i class="fas fa-user-circle fa-2x" style="color: var(--primary-color); cursor: pointer;"></i>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="main-wrapper">
    <div class="form-container">
      <div class="form-header">
        <h2>Secure Your Spot</h2>
        <p>Book instantly with your favorite salon. No waiting lines.</p>
      </div>

      <form action="/register" method="POST" enctype="multipart/form-data">

        <!-- Salon Selection -->
        <div class="form-group">
          <label for="salon-select">Select Preferred Salon</label>
          <div class="input-wrapper">
            <select id="salon-select" name="salon_id" required class="form-control">
              <option value="" disabled selected>Choose a salon...</option>
              <% institutions.forEach(function(inst) { %>
                <option value="<%= inst.salon_id %>">
                  <%= inst.institutionName%>
                </option>
                <% }); %>
            </select>
            <i class="fas fa-store"></i>
          </div>
        </div>

        <!-- Full Name -->
        <div class="form-group">
          <label for="fullName">Full Name</label>
          <div class="input-wrapper">
            <input type="text" id="fullName" name="fullName" class="form-control" placeholder="e.g. Abebe Kebede"
              required />
            <i class="fas fa-user"></i>
          </div>
        </div>

        <!-- Phone Number -->
        <div class="form-group">
          <label for="phone">Phone Number</label>
          <div class="input-wrapper">
            <input type="number" id="phone" name="phone" class="form-control" placeholder="09..." required />
            <i class="fas fa-phone-alt"></i>
          </div>
          <div id="message"></div>
        </div>

        <!-- Date Selection -->
        <div class="form-group">
          <label for="regdate">Preferred Date & Time</label>
          <div class="input-wrapper">
            <input type="datetime-local" id="regdate" name="regdate" class="form-control" required />
            <i class="fas fa-calendar-alt"></i>
          </div>
        </div>

        <button type="submit" class="submit-btn">
          <span>Confirm Booking</span>
          <i class="fas fa-check-circle"></i>
        </button>

        <p class="note" style="text-align: center; margin-top: 20px; color: #888; font-size: 0.9rem;">
          <i class="fas fa-lock" style="font-size: 0.8rem;"></i> Your booking is secure and confirmed instantly.
        </p>

      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <div class="social-links">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-tiktok"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
      </div>
    </div>
    <div class="footer-bottom">
      &copy; 2026 MDF BeautyHub Platform. All rights reserved.
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Optional Select2 if User really wants search inside dropdown, though native select is often cleaner for mobile -->
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

  <script>
    // Initialize Select2 if needed, but styling it to match custom CSS is tricky.
    // Let's keep the user's logic but style the container.
    $(document).ready(function () {
      $('#salon-select').select2({
        width: '100%',
        placeholder: "Choose a salon...",
        allowClear: true
      });

      // Fix Select2 styling to match our theme (optional JS tweaks)
      $('.select2-selection').css({
        'height': '50px',
        'border-radius': '12px',
        'border': '2px solid transparent', // Let css handle it? No, select2 overrides.
        'background-color': '#f8f9fa',
        'display': 'flex',
        'align-items': 'center',
        'padding-left': '10px'
      });
    });

    const input = document.getElementById('phone');
    const messageEl = document.getElementById('message');

    // Phone Validation Logic
    input.addEventListener('input', function (e) {
      let value = e.target.value;

      // Remove non-digits
      value = value.replace(/\D/g, '');

      // Enforce 09 prefix
      if (value.length >= 1 && value[0] !== '0') value = '0' + value.slice(1);
      if (value.length >= 2 && value[1] !== '9') value = '09' + value.slice(2);
      if (value.length > 10) value = value.slice(0, 10);

      e.target.value = value;

      const isComplete = /^09\d{8}$/.test(value);

      // Visual Feedback
      e.target.classList.remove('valid', 'invalid');

      if (value === '') {
        messageEl.textContent = '';
        messageEl.className = 'message'; // reset
      } else if (!/^09/.test(value)) {
        e.target.classList.add('invalid');
        messageEl.innerHTML = '<i class="fas fa-exclamation-circle"></i> Must start with "09"';
        messageEl.className = 'message error';
      } else if (value.length < 10) {
        e.target.classList.add('invalid');
        messageEl.innerHTML = `<i class="fas fa-info-circle"></i> ${value.length}/10 digits`;
        messageEl.className = 'message error';
      } else if (isComplete) {
        e.target.classList.add('valid');
        messageEl.innerHTML = '<i class="fas fa-check"></i> Valid phone number';
        messageEl.className = 'message success';
      }
    });
  </script>

</body>

</html>