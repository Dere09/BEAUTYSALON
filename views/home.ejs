    .cylinder{
      height: 50px;
      width: 500px;
      background:linear-gradient(to right, 204,204,204,0);
      border-radius: 50px;
      box-shadow: inset 0 0 10px rgba(0,0,0,0.2);
      border-width:1px solid #cebaba;
      padding-top: 10px;
      padding-left: 40px;
      
    }
    .cylinder{
      transition: transform 0.3 ease;
      transform: scale(1);/*default zoom in*/
    }
    .cylinder:hover{
      transform: scale(0.9); /*zoom-out on hover*/
    }
    .column{
      flex: 1;
    }
    a{
      text-decoration: none;
      font-family: var(--font-main);
      color: white;
    }

    /* Responsive Design for Ads */
    @media (max-width: 768px) {
      .ad-banner {
        margin: 10px;
        padding: 15px;
      }
      
      .sidebar-ad {
        max-width: 100%;
        margin: 10px auto;
      }
    }
  </style>
