  <!-- Scripts -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const stack = document.getElementById('serviceStack');
      const cards = Array.from(stack.querySelectorAll('.service-card'));
      let currentIndex = 0;

      function updateStack() {
        cards.forEach((card, i) => {
          // Calculate relative position in stack
          let pos = (i - currentIndex + cards.length) % cards.length;

          // Reset styles
          card.style.zIndex = '';
          card.style.transform = '';
          card.style.opacity = '';
          card.style.pointerEvents = 'none';

          if (pos === 0) { // Top card
            card.style.zIndex = '5';
            card.style.transform = 'translateZ(0) translateY(0)';
            card.style.opacity = '1';
            card.style.pointerEvents = 'auto';
          } else if (pos === 1) {
            card.style.zIndex = '4';
            card.style.transform = 'translateZ(-50px) translateY(20px) scale(0.95)';
            card.style.opacity = '0.8';
          } else if (pos === 2) {
            card.style.zIndex = '3';
            card.style.transform = 'translateZ(-100px) translateY(40px) scale(0.9)';
            card.style.opacity = '0.6';
          } else if (pos === 3) {
            card.style.zIndex = '2';
            card.style.transform = 'translateZ(-150px) translateY(60px) scale(0.85)';
            card.style.opacity = '0.4';
          } else {
            card.style.zIndex = '1';
            card.style.transform = 'translateZ(-200px) translateY(80px) scale(0.8)';
            card.style.opacity = '0';
          }
        });
      }

      document.getElementById('stackNext').addEventListener('click', () => {
        const topCard = cards[currentIndex];

        // Animate out
        topCard.style.transform = 'translateX(120%) rotate(20deg)';
        topCard.style.opacity = '0';

        setTimeout(() => {
          currentIndex = (currentIndex + 1) % cards.length;
          updateStack();

          // Reset the card that just left so it can come back in the stack order properly
          // (The updateStack function handles the visual reset based on position)
        }, 300);
      });

      document.getElementById('stackPrev').addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + cards.length) % cards.length;
        updateStack();
      });

      // Initialize
      updateStack();
    });
  </script>

