    <script>
        // Global variables
        let currentAd = null;

        // Tab management
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');
            event.target.closest('.tab-btn').classList.add('active');

            if (tabName === 'manage') loadAds();
        }

        // Image preview
        document.getElementById('imageInput').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // Form submission
        document.getElementById('adForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';

            const progressDiv = document.getElementById('uploadProgress');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            progressDiv.style.display = 'block';

            const formData = new FormData();
            formData.append('title', document.getElementById('adTitle').value);
            formData.append('description', document.getElementById('adDescription').value);
            formData.append('url', document.getElementById('adUrl').value);
            formData.append('position', document.getElementById('adPosition').value);
            formData.append('status', document.getElementById('adStatus').value);
            formData.append('image', document.getElementById('imageInput').files[0]);

            try {
                // Simulate progress
                let progress = 0;
                const interval = setInterval(() => {
                    progress += Math.random() * 20;
                    if (progress > 85) progress = 85;
                    progressBar.style.width = progress + '%';
                    progressText.textContent = `Uploading to Node.js server... ${Math.round(progress)}%`;
                }, 300);

                const response = await fetch('/api/ads/create', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                clearInterval(interval);
                progressBar.style.width = '100%';
                progressText.innerHTML = '<i class="fas fa-check" style="color: #28a745;"></i> Upload Complete!';

                if (data.success) {
                    setTimeout(() => {
                        alert('üéâ Ad uploaded successfully to server!');
                        generateEmbedCode(data.ad);
                        resetForm();
                        loadAds(); // Refresh ads list
                    }, 1500);
                } else {
                    alert('‚ùå Error: ' + data.message);
                }
            } catch (error) {
                alert('‚ùå Upload failed: ' + error.message);
            } finally {
                setTimeout(() => {
                    progressDiv.style.display = 'none';
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }, 2000);
            }
        });

        // Load ads from backend
        async function loadAds() {
            try {
                const response = await fetch('/api/ads');
                const data = await response.json();
                // API may return an object { success, stats, ads } or an array of ads
                const ads = Array.isArray(data) ? data : (data && data.ads ? data.ads : []);

                const adsList = document.getElementById('adsList');
                adsList.innerHTML = '';

                if (!ads || ads.length === 0) {
                    adsList.innerHTML = `
                        <div class="ad-card" style="text-align: center; padding: 60px; grid-column: 1/-1;">
                            <i class="fas fa-inbox" style="font-size: 4rem; color: #ccc; margin-bottom: 20px;"></i>
                            <h3 style="color: #666; margin-bottom: 10px;">No Ads Yet</h3>
                            <p style="color: #999;">Create your first advertisement above!</p>
                        </div>
                    `;
                    return;
                }

                ads.forEach(ad => {
                    const adCard = document.createElement('div');
                    adCard.className = 'ad-card';
                    adCard.innerHTML = `
                        <img src="${ad.image_path}" alt="${ad.title}" style="width: 100%; height: 180px; object-fit: cover; border-radius: 12px; cursor: pointer;" 
                             onerror="this.src='https://via.placeholder.com/350x180/cc3366/ffffff?text=No+Image'" 
                             onclick="window.open('${ad.url}', '_blank')">
                        <h3 style="color: #cc3366; margin: 15px 0 10px 0; font-family: 'Playfair Display', serif;">${ad.title}</h3>
                        <p style="color: #666; margin-bottom: 15px; line-height: 1.5;">${ad.description || 'No description'}</p>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="padding: 8px 16px; border-radius: 25px; font-size: 12px; font-weight: bold; 
                                         background: ${ad.status === 'active' ? '#d4edda' : '#f8d7da'}; 
                                         color: ${ad.status === 'active' ? '#155724' : '#721c24'};">
                                ${ad.status.toUpperCase()}
                            </span>
                            <div>
                                <button class="btn" style="padding: 8px 16px; font-size: 14px; background: #007bff; margin-right: 10px;" 
                                        onclick="generateEmbedCode(${JSON.stringify(ad)})">
                                    <i class="fas fa-code"></i> Get Code
                                </button>
                                <button class="btn" style="padding: 8px 16px; font-size: 14px; background: #dc3545;" 
                                        onclick="deleteAd('${ad._id || ad.id || ''}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    `;
                    adsList.appendChild(adCard);
                });
            } catch (error) {
                document.getElementById('adsList').innerHTML = `
                    <div class="ad-card" style="text-align: center; padding: 60px; grid-column: 1/-1;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 4rem; color: #dc3545;"></i>
                        <p style="color: #dc3545; margin-top: 15px;">Error loading ads: ${error.message}</p>
                    </div>
                `;
            }
        }

        // Generate embed code
        function generateEmbedCode(ad) {
            const positionClass = ad.position === 'header-banner' || ad.position === 'bottom-banner'
                ? 'ad-banner' : 'sidebar-ad';

            const code = `<!-- ${ad.title} - Generated by Beauty Salon Ads Manager -->
<div class="${positionClass}" style="margin: 20px 0; border-radius: 15px; overflow: hidden; box-shadow: 0 8px 25px rgba(0,0,0,0.1);">
    <a href="${ad.url}" target="_blank" style="text-decoration: none; color: inherit; display: block;">
        <img src="${window.location.origin}${ad.image_path}" alt="${ad.title}" 
             style="width: 100%; height: auto; display: block;">
        <div style="padding: 20px; background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
            <h3 style="color: #cc3366; margin: 0 0 10px 0; font-family: 'Playfair Display', serif;">${ad.title}</h3>
            ${ad.description ? `<p style="margin: 0 0 15px 0; color: #666;">${ad.description}</p>` : ''}
            <button style="background: linear-gradient(45deg, #cc3366, #ff69b4); color: white; padding: 12px 24px; border: none; border-radius: 25px; cursor: pointer; font-weight: bold;">
                Learn More <i class="fas fa-arrow-right"></i>
            </button>
        </div>
    </a>
</div>`;

            document.getElementById('codeOutput').value = code;
            document.getElementById('generatedCode').style.display = 'block';
            document.getElementById('codeOutput').scrollIntoView({ behavior: 'smooth' });
        }

        // Copy code
        function copyCode() {
            const textarea = document.getElementById('codeOutput');
            textarea.select();
            document.execCommand('copy');
            alert('üìã HTML code copied to clipboard!');
        }

        // Download code
        function downloadCode() {
            const code = document.getElementById('codeOutput').value;
            const blob = new Blob([code], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `ad-${Date.now()}.html`;
            a.click();
            URL.revokeObjectURL(url);
        }

        // Delete ad
        async function deleteAd(id) {
            if (confirm('Are you sure you want to delete this ad?')) {
                try {
                    const response = await fetch(`/api/ads/${id}`, { method: 'DELETE' });
                    const data = await response.json();
                    if (data.success) {
                        alert('üóëÔ∏è Ad deleted successfully!');
                        loadAds();
                    }
                } catch (error) {
                    alert('‚ùå Delete failed: ' + error.message);
                }
            }
        }

        // Reset form
        function resetForm() {
            document.getElementById('adForm').reset();
            document.getElementById('imagePreview').style.display = 'none';
            document.getElementById('generatedCode').style.display = 'none';
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function () {
            loadAds();
        });
    </script>
</body>

