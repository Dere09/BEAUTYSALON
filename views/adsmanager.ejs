                                <option value="">Select position...</option>
                                <option value="header-banner">üì¢ Header Banner</option>
                                <option value="sidebar-ad">üì± Sidebar Ad</option>
                                <option value="mid-page-banner">‚≠ê Mid-Page Banner</option>
                                <option value="bottom-banner">üéÅ Bottom Banner</option>
                            </select>
                        </div>
                        <div style="margin-bottom: 25px;">
                            <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #cc3366;">
                                <i class="fas fa-toggle-on"></i> Status
                            </label>
                            <select id="adStatus" name="status"
                                style="width: 100%; padding: 12px; border: 2px solid #e8eaf6; border-radius: 12px; background: #fafbff;">
                                <option value="active">‚úÖ Active</option>
                                <option value="inactive">‚è∏Ô∏è Inactive</option>
                            </select>
                        </div>
                    </div>

                    <div style="text-align: center; margin-top: 30px;">
                        <button type="submit" class="btn" id="submitBtn" style="margin-right: 15px;">
                            <i class="fas fa-save"></i> Save Ad to Server
                        </button>
                        <button type="button" class="btn" onclick="resetForm()" style="background: #6c757d;">
                            <i class="fas fa-refresh"></i> Reset
                        </button>
                    </div>
                </form>

                <!-- Progress Bar -->
                <div id="uploadProgress"
                    style="display: none; margin-top: 20px; padding: 20px; background: #f8f9fa; border-radius: 15px; text-align: center;">
                    <i class="fas fa-spinner fa-spin fa-2x" style="color: #cc3366;"></i>
                    <p id="progressText">Uploading image to server...</p>
                    <div
                        style="width: 100%; height: 10px; background: #e9ecef; border-radius: 5px; overflow: hidden; margin: 15px 0;">
