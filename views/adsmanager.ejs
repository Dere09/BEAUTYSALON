                        <div style="margin-bottom: 25px;">
                            <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #cc3366;">
                                <i class="fas fa-tag"></i> Ad Title
                            </label>
                            <input type="text" id="adTitle" name="title" placeholder="e.g. Premium Beauty Products"
