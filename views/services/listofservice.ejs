        <input type="text" name="serviceOffId" id="editServiceOffId" required>
        <label>Service Type</label>
        <input type="text" name="serviceName" id="editserviceName" required>
        <label>Status</label>
        <select name="status" id="editstatus">
          <option value="Completed">Completed</option>
          <option value="In Progress">In Progress</option>
        </select>
        <label>Paid Amount</label>
        <input type="text" name="Amount" id="editAmount" required>
        <!-- <label>Registration ID</label> 
        <input type="text" name="registrationId" id="registrationId" hidden required>-->
        <button type="submit">Save Changes</button>
        <button type="button" onclick="closeModal('editModal')">Cancel</button>
      </form>
    </div>
  </div>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> BBs Dashboard. All rights reserved. |
        <a href="/privacy">Privacy</a> | <a href="/terms">Terms</a>
    </p>
  </footer>
