<%- include('partials/header', { title: 'Member Registration' , navActive: '' }) %>
  <%- include('partials/sidebar', { path: '/register' }) %>

    <div class="main-content">
      <style>
        .registration-container {
          max-width: 600px;
          margin: 40px auto;
          background-color: white;
          padding: 35px;
          border-radius: 16px;
          box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
        }

        h2 {
          text-align: center;
          font-family: 'Playfair Display', serif;
          color: #cc3366;
          margin-bottom: 25px;
        }

        form {
          display: flex;
          flex-direction: column;
          gap: 15px;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="password"],
        select {
          width: 100%;
          padding: 12px 15px;
          border: 1px solid #ddd;
          border-radius: 10px;
          font-size: 15px;
          transition: border-color 0.3s;
        }

        input:focus,
        select:focus {
          border-color: #cc3366;
          outline: none;
        }

        button[type="submit"] {
          background-color: #cc3366;
          color: white;
          padding: 14px;
          border: none;
          border-radius: 10px;
          font-size: 16px;
          font-weight: 600;
          cursor: pointer;
          transition: background 0.3s, transform 0.2s;
          margin-top: 10px;
        }

        button[type="submit"]:hover {
          background-color: #ad1457;
          transform: translateY(-2px);
        }

        .note {
          text-align: center;
          margin-top: 20px;
          font-size: 14px;
          color: #777;
        }

        .note a {
          color: #cc3366;
          font-weight: 600;
          text-decoration: none;
        }
      </style>

      <div class="registration-container">
        <h2><i class="fas fa-user-plus"></i> Member Registration</h2>

        <form action="/member-register" method="POST">
          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Full Name</label>
            <input type="text" name="fullName" placeholder="Enter your full name" required />
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Email Address</label>
            <input type="email" name="email" placeholder="email@example.com" required />
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Phone Number</label>
            <input type="tel" name="phone" placeholder="e.g. 0912345678" required />
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Gender</label>
            <select name="gender" required>
              <option value="">Select Gender</option>
              <option value="Female">Female</option>
              <option value="Male">Male</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Password</label>
            <input type="password" name="password" placeholder="Create a secure password" required />
          </div>

          <button type="submit">Register as Member</button>
        </form>

        <div class="note">Already a member? <a href="/login">Login here</a>.</div>
      </div>
    </div>

    <script>
      // Prevent back navigation to avoid resubmission
      history.pushState(null, null, window.location.href);
      window.onpopstate = function () {
        history.go(1);
      };
    </script>

    <%- include('partials/header') %>