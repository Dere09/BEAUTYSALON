<%- include('partials/header', { title: 'Gallery' , navActive: '' }) %>
  <%- include('partials/sidebar', { path: '' }) %>

    <div class="main-content">
      <style>
        .gallery-container {
          padding: 20px;
          display: flex;
          overflow-x: auto;
          gap: 20px;
          background: white;
          border-radius: 15px;
          box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .gallery-container img {
          height: 350px;
          border-radius: 12px;
          flex-shrink: 0;
          object-fit: cover;
          transition: transform 0.3s, box-shadow 0.3s;
        }

        .gallery-container img:hover {
          transform: scale(1.02);
          box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        h2 {
          font-family: 'Playfair Display', serif;
          color: #cc3366;
          margin-bottom: 25px;
        }
      </style>

      <h2><i class="fas fa-images"></i> Beauty Salon Gallery</h2>

      <div class="gallery-container">
        <img src="/gallery/imgs1.jpg" alt="Salon 1">
        <img src="/gallery/imgs2.jpg" alt="Salon 2">
        <img src="/gallery/imgs3.jpg" alt="Salon 3">
        <img src="/gallery/imgs4.jpg" alt="Salon 4">
        <img src="/gallery/imgs5.jpg" alt="Salon 5">
        <img src="/gallery/imgs6.jpg" alt="Salon 6">
        <img src="/gallery/imgs7.jpg" alt="Salon 7">
      </div>
    </div>

