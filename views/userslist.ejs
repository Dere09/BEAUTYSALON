<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User List | Blossom Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600&family=Open+Sans:wght@400;500;600&display=swap"
    rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Open Sans', sans-serif;
      display: flex;
      height: 100vh;
      background-color: #fff5f8;
      /* Matches dashboard */
      color: #333;
    }

    /* Sidebar Styling (Matches Dashboard) */
    .sidebar {
      width: 250px;
      background-color: white;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      display: flex;
      flex-direction: column;
      flex-shrink: 0;
    }

    .sidebar h2 {
      font-family: 'Playfair Display', serif;
      color: #cc3366;
      font-size: 24px;
      margin-bottom: 40px;
      text-align: center;
      font-weight: 600;
    }

    .sidebar ul {
      list-style: none;
    }

    .sidebar ul li {
      margin-bottom: 15px;
    }

    .sidebar ul li a {
      text-decoration: none;
      color: #555;
      font-size: 16px;
      display: flex;
      align-items: center;
      padding: 12px 15px;
      border-radius: 12px;
      transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      font-weight: 500;
      border-left: 4px solid transparent;
    }

    .sidebar ul li a:hover,
    .sidebar ul li a.active {
      background-color: #ffeef5;
      color: #d81b60;
      transform: translateX(8px);
      box-shadow: 0 4px 15px rgba(233, 30, 99, 0.15);
      border-left: 4px solid #d81b60;
    }

    .sidebar ul li a i {
      margin-right: 15px;
      width: 25px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .sidebar ul li a:hover i {
      transform: scale(1.2) rotate(10deg);
    }

    /* Main Content Styling */
    .main-content {
      flex: 1;
      padding: 40px;
      overflow-y: auto;
    }

    .header-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .page-title h1 {
      font-family: 'Playfair Display', serif;
      font-size: 32px;
      color: #cc3366;
      margin-bottom: 5px;
    }

    .page-title p {
      color: #777;
      font-size: 14px;
    }

    .add-btn {
      background: linear-gradient(135deg, #e91e63, #d81b60);
      color: white;
      text-decoration: none;
      padding: 12px 25px;
      border-radius: 30px;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(233, 30, 99, 0.3);
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .add-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(233, 30, 99, 0.4);
      background: linear-gradient(135deg, #d81b60, #ad1457);
    }

    /* Table Card */
    .table-card {
      background: white;
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .toolbar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      flex-wrap: wrap;
      gap: 15px;
    }

    .search-box {
      position: relative;
    }

    .search-box input {
      padding: 10px 15px 10px 40px;
      border: 1px solid #eee;
      border-radius: 8px;
      width: 300px;
      font-size: 14px;
      transition: border-color 0.3s;
      background: #fafafa;
    }

    .search-box input:focus {
      border-color: #cc3366;
      outline: none;
      background: white;
    }

    .search-box i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #aaa;
    }

    /* Table Styles */
    .user-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }

    .user-table th {
      text-align: left;
      padding: 15px 20px;
      color: #888;
      font-weight: 600;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid #f0f0f0;
    }

    .user-table td {
      padding: 16px 20px;
      border-bottom: 1px solid #f9f9f9;
      vertical-align: middle;
      color: #444;
      font-size: 15px;
    }

    .user-table tr:last-child td {
      border-bottom: none;
    }

    .user-table tr:hover td {
      background-color: #fff9fc;
    }

    /* Role Badge */
    .role-badge {
      display: inline-block;
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: capitalize;
    }

    .role-admin {
      background-color: #e3f2fd;
      color: #1976d2;
    }

    .role-staff {
      background-color: #e8f5e9;
      color: #2e7d32;
    }

    .role-manager {
      background-color: #fff3e0;
      color: #f57c00;
    }

    .role-default {
      background-color: #f5f5f5;
      color: #616161;
    }

    /* Action Buttons */
    .actions {
      display: flex;
      gap: 10px;
    }

    .action-btn {
      width: 35px;
      height: 35px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      transition: all 0.2s;
    }

    .btn-edit {
      background-color: #e3f2fd;
      color: #1976d2;
    }

    .btn-edit:hover {
      background-color: #bbdefb;
    }

    .btn-reset {
      background-color: #fff3e0;
      color: #f57c00;
    }

    .btn-reset:hover {
      background-color: #ffe0b2;
    }

    .btn-delete {
      background-color: #ffebee;
      color: #c62828;
    }

    .btn-delete:hover {
      background-color: #ffcdd2;
    }

    /* User Avatar Placeholder */
    .user-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .avatar-circle {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #cc3366, #ff80ab);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 16px;
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h2>ðŸŒ¸ BisratBs</h2>
    <ul>
      <li><a href="/dashboard"><i class="fas fa-border-all"></i> Dashboard</a></li>
      <li><a href="/userslist" class="active"><i class="fas fa-users-line"></i> User List</a></li>
      <li><a href="/createUser"><i class="fas fa-user-plus"></i> Add New User</a></li>
      <li><a href="/service"><i class="fas fa-spa"></i> Service Offered</a></li>
      <li><a href="/reset-password/exampleUserId"><i class="fas fa-unlock-alt"></i> Reset Password</a></li>
      <li><a href="/services/createServiceType"><i class="fas fa-wand-magic-sparkles"></i> Manage Services</a></li>
      <li><a href="/logout"><i class="fas fa-right-from-bracket"></i> Sign Out</a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content">

    <div class="header-section">
      <div class="page-title">
        <h1>User Management</h1>
        <p>View, edit, and manage system access.</p>
      </div>
      <a href="/createUser" class="add-btn">
        <i class="fas fa-plus"></i> Add New User
      </a>
    </div>

    <!-- Users Table Card -->
    <div class="table-card">

      <div class="toolbar">
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" id="searchInput" placeholder="Search users by name or role..." onkeyup="filterTable()">
        </div>
        <!-- Potential Filters or Export buttons could go here -->
      </div>

      <% if (users.length===0) { %>
        <div style="text-align: center; padding: 50px; color: #888;">
          <i class="fas fa-users-slash" style="font-size: 48px; margin-bottom: 20px; color: #ddd;"></i>
          <p>No users found in the system.</p>
        </div>
        <% } else { %>
          <table class="user-table" id="usersTable">
            <thead>
              <tr>
                <th>User</th>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user=> { %>
                <tr>
                  <td>
                    <div class="user-info">
                      <div class="avatar-circle">
                        <%= user.fullName.charAt(0).toUpperCase() %>
                      </div>
                      <div>
                        <div style="font-weight: 600;">
                          <%= user.fullName %>
                        </div>
                        <!-- <div style="font-size: 12px; color: #888;">ID: ...</div> -->
                      </div>
                    </div>
                  </td>
                  <td>@<%= user.username %>
                  </td>
                  <td>
                    <span class="role-badge role-<%= user.role ? user.role.toLowerCase() : 'default' %>">
                      <%= user.role || 'Staff' %>
                    </span>
                  </td>
                  <td>
                    <div class="actions">
                      <!-- <a href="/users/edit/<%= user.username %>" class="action-btn btn-edit" title="Edit">
                      <i class="fas fa-edit"></i>
                    </a> -->
                      <!-- Note: Edit route seemed theoretical in old code, keeping logical ones -->
                      <a href="/reset-password/<%= user.username %>" class="action-btn btn-reset"
                        title="Reset Password">
                        <i class="fas fa-key"></i>
                      </a>
                    </div>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
          <% } %>
    </div>

    <!-- Pagination -->
    <% if (totalPages> 1) { %>
      <div class="pagination-container"
        style="display: flex; justify-content: space-between; align-items: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #f0f0f0;">
        <span style="color: #666; font-size: 14px;">
          Showing page <strong>
            <%= currentPage %>
          </strong> of <strong>
            <%= totalPages %>
          </strong>
        </span>
        <div class="pagination-controls" style="display: flex; gap: 8px;">
          <% if (currentPage> 1) { %>
            <a href="?page=<%= currentPage - 1 %>" class="pagination-btn"
              style="text-decoration: none; padding: 8px 16px; border: 1px solid #e0e0e0; border-radius: 8px; color: #555; background: white; transition: all 0.2s;">
              <i class="fas fa-chevron-left"></i> Previous
            </a>
            <% } %>

              <% for(let i=1; i <=totalPages; i++) { %>
                <a href="?page=<%= i %>" class="pagination-btn <%= currentPage === i ? 'active' : '' %>"
                  style="text-decoration: none; padding: 8px 14px; border: 1px solid <%= currentPage === i ? '#cc3366' : '#e0e0e0' %>; border-radius: 8px; color: <%= currentPage === i ? 'white' : '#555' %>; background: <%= currentPage === i ? '#cc3366' : 'white' %>; font-weight: 600; transition: all 0.2s;">
                  <%= i %>
                </a>
                <% } %>

                  <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>" class="pagination-btn"
                      style="text-decoration: none; padding: 8px 16px; border: 1px solid #e0e0e0; border-radius: 8px; color: #555; background: white; transition: all 0.2s;">
                      Next <i class="fas fa-chevron-right"></i>
                    </a>
                    <% } %>
        </div>
      </div>
      <% } %>

  </div>

  <script>
    // Include the Search Filter script from before
    function filterTable() {
      // ... (keep existing filter logic)
      const input = document.getElementById("searchInput");
      const filter = input.value.toLowerCase();
      const table = document.getElementById("usersTable");
      const tr = table.getElementsByTagName("tr");

      for (let i = 1; i < tr.length; i++) {
        let found = false;
        const tds = tr[i].getElementsByTagName("td");
        for (let j = 0; j < tds.length - 1; j++) {
          // ...
          if (tds[j]) {
            const txtValue = tds[j].textContent || tds[j].innerText;
            if (txtValue.toLowerCase().indexOf(filter) > -1) {
              found = true;
              break;
            }
          }
        }
        tr[i].style.display = found ? "" : "none";
      }
    }
  </script>

</body>

</html>