<%- include('partials/header', { title: 'Salon Appointment' , navActive: '' , hideMenu: true }) %>
  <%- include('partials/sidebar', { path: '/register' }) %>

    <div class="main-content">
      <style>
        .registration-container {
          max-width: 600px;
          margin: 40px auto;
          background-color: white;
          padding: 35px;
          border-radius: 16px;
          box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
        }

        h2 {
          text-align: center;
          font-family: 'Playfair Display', serif;
          color: #cc3366;
          margin-bottom: 25px;
        }

        form {
          display: flex;
          flex-direction: column;
          gap: 15px;
        }

        input[type="text"],
        input[type="number"],
        input[type="datetime-local"] {
          width: 100%;
          padding: 12px 15px;
          border: 1px solid #ddd;
          border-radius: 10px;
          font-size: 15px;
          transition: border-color 0.3s;
        }

        input:focus {
          border-color: #cc3366;
          outline: none;
        }

        .file-input-wrapper {
          border: 2px dashed #eee;
          padding: 20px;
          border-radius: 12px;
          text-align: center;
          cursor: pointer;
          transition: background 0.3s;
        }

        .file-input-wrapper:hover {
          background: #fdf6f8;
          border-color: #ffe3ec;
        }

        button[type="submit"] {
          background-color: #cc3366;
          color: white;
          padding: 14px;
          border: none;
          border-radius: 10px;
          font-size: 16px;
          font-weight: 600;
          cursor: pointer;
          transition: background 0.3s, transform 0.2s;
        }

        button[type="submit"]:hover {
          background-color: #ad1457;
          transform: translateY(-2px);
        }

        .note {
          text-align: center;
          margin-top: 20px;
          font-size: 13px;
          color: #777;
        }
      </style>

      <div class="registration-container">
        <h2><i class="fas fa-calendar-check"></i> Salon Appointment Registration</h2>

        <form action="/register" method="POST" enctype="multipart/form-data">
          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Full Name</label>
            <input type="text" name="fullName" placeholder="Enter your full name" required />
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Phone Number</label>
            <input type="number" name="phone" placeholder="e.g. 0912345678" required />
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Appointment Date &
              Time</label>
            <input type="datetime-local" name="regdate" required />
          </div>

          <div class="input-group">
            <label style="display:block; margin-bottom:5px; font-weight:600; font-size:14px;">Payment Receipt</label>
            <div class="file-input-wrapper" onclick="document.getElementById('receipt').click()">
              <input type="file" id="receipt" name="receipt" accept="image/*" style="display:none;" required />
              <i class="fas fa-cloud-upload-alt fa-2x" style="color: #cc3366; margin-bottom: 10px;"></i>
              <p>Click to upload receipt image</p>
            </div>
          </div>

          <button type="submit">Complete Appointment</button>
        </form>

        <div class="note">Please upload a clear image of your payment receipt for verification.</div>
      </div>
    </div>

    <script>
      // Prevent back navigation to avoid resubmission
      history.pushState(null, null, window.location.href);
      window.onpopstate = function () {
        history.go(1);
      };
    </script>

    <%- include('partials/footer') %>